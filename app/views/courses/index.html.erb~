                      <% end %>
                      <% unless course.open_close then %>
                        <td><%=link_to "开课", open_course_url(course),class: 'btn btn-xs btn-info' %><td>
                      <% end %>
                      
                      
                      <td><%= link_to "删除", course_path(course), :method => "delete", class: 'btn btn-xs btn-danger', :data => {confirm: '确定要删除此课程?'} %></td>
